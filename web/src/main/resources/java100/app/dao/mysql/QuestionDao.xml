<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="java100.app.dao.QuestionDao">
	
    <resultMap type="question" id="questionMap">
        <id column="qno" property="no"/>
        <result column="qart" property="article"/>
        <result column="qcont" property="context"/>
        <result column="lno" property="lno"/>
        <result column="nno" property="nno"/>
    </resultMap>

    <select id="findAll" resultMap="questionMap">
		select
            qno,
            qart,
            qcont
			from g_que
			where lno = #{lno}
	</select>
	
    <insert id="insert" parameterType="question">
        insert into g_que(qart, qcont, lno)
        values(#{article}, #{context}, #{lno})
    </insert>
    
   <select id="findByNo" resultMap="questionMap" parameterType="int">
        select
            qno,
            qart,
            qcont,
            lno
        from g_que 
        where qno=#{value}
    </select>
    
   <update id="update" parameterType="question">
        update g_que set 
			qart=#{article},
			qcont=#{context}
        where qno=#{no}
    </update> 
 
    <delete id="delete" parameterType="int">
        delete from g_que
        where qno=#{value}
    </delete> 
</mapper>  









