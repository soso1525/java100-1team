            </when>
            <when test="orderColumn == 'name' and align == 'desc'">
                name desc
            </when>
            <otherwise>
                name asc
            </otherwise>
        </choose>
        
        limit #{startIndex}, #{size} -->
    </select>
    
    <select id="findByNo" resultMap="memberMap" parameterType="int">
        <include refid="select1"/>
        from g_per
        
        where no=#{value}
    </select>
    
    <select id="findByIdAndPassword" 
            resultMap="memberMap" parameterType="map">
        <include refid="select1"/>
        from g_per
        where pid=#{id} and ppwd=password(#{password})
    </select>
    
    <select id="countAll" resultType="int">
        select count(*) from g_per
    </select>
    
    <insert id="insert" parameterType="member">
        insert into g_per(pmail,pid,ppwd,pregdt,ptel)
        values(#{email},#{id},password(#{password}),now(),#{tel})
    </insert>
	
